<h1>Foodhistories</h1>

<%= search_form_for @q do |f| %>

  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>

  <%= f.label :calorie_lt %>
  <%= f.search_field :calorie_lt %>

  <%= f.label :user_name_cont %>
  <%= f.search_field :user_name_cont %>

 <%= f.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>View Range Stat</th>
      <th>Calorie</th>
      <th>Protein</th>
      <th>Fat</th>
      <th>Carbo</th>
      <th>Image name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @foodhistories %>
  </tbody>
</table>

